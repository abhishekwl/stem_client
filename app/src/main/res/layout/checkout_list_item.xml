<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  app:contentPadding="16dp"
  app:cardBackgroundColor="@color/colorBackground"
  app:cardUseCompatPadding="true"
  android:clipChildren="false"
  android:clipToPadding="false"
  android:layout_width="match_parent"
  android:layout_height="128dp">

  <LinearLayout
    android:gravity="center"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
      android:layout_weight="1"
      android:layout_width="0dp"
      android:clipChildren="false"
      android:clipToPadding="false"
      android:orientation="vertical"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/checkoutListItemTestName"
        android:textColor="@color/colorTextDark"
        android:fontFamily="@font/futura"
        android:textSize="22sp"
        tools:text="Test Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/checkoutListItemHospitalName"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        tools:text="Hospital Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

      <TextView
        android:id="@+id/checkoutListItemTestPrice"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Test Price (\u20b9)"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/checkoutListItemHospitalImageView"
      tools:src="@drawable/logo"
      app:civ_border_width="1dp"
      app:civ_border_color="@color/colorTextDark"
      app:civ_circle_background_color="@color/colorAccent"
      android:layout_width="64dp"
      android:layout_height="64dp" />

  </LinearLayout>

</android.support.v7.widget.CardView>