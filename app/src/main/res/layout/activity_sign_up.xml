<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">

    <LinearLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="40sp"
            android:fontFamily="@font/futura"
            android:textColor="@color/colorTextDark"
            android:text="Sign Up."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                android:text="Already registered? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/signUpLoginTextView"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:text="Sign In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpNameEditText"
                android:inputType="textPersonName|textCapWords"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:hint="Name"
                android:textColorHint="@color/colorPrimary"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/signUpAgeEditText"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:hint="Age"
                    android:textColorHint="@color/colorPrimary"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>

            <RadioGroup
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/signUpMaleRadioButton"
                    android:text="Male"
                    android:checked="true"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:id="@+id/signUpFemaleRadioButton"
                    android:text="Female"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_height="match_parent" />

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Blood Group"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_marginTop="2dp"
            android:id="@+id/signUpBloodGroupSpinner"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpContactEditText"
                android:inputType="phone"
                android:textSize="16sp"
                android:maxLength="10"
                android:textColor="@android:color/black"
                android:hint="Contact Number"
                android:textColorHint="@color/colorPrimary"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpEmailEditText"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:hint="Email Address"
                android:textColorHint="@color/colorPrimary"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpPasswordEditText"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@android:color/black"
                android:hint="Password"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signUpConfirmPasswordEditText"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@android:color/black"
                android:hint="Confirm Password"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/signUpButton"
            android:fontFamily="@font/futura"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorBackground"
            android:text="Sign Up"
            android:background="@color/colorPrimary"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>