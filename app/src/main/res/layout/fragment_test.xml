<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TestFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/testsRecyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/testBottomLinearLayout"
        android:visibility="gone"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/testsBottomTextView"
            android:maxLines="4"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            tools:text="Glucose Test, Blood Test, Basic Health Checkup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/testsNextButton"
        app:backgroundTint="@color/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorAccent"
        android:src="@drawable/ic_navigate_next_white_24dp"
        app:fabSize="normal"
        android:layout_margin="20dp"
        app:elevation="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>